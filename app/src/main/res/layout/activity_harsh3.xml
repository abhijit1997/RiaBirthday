<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_harsh3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.riabirthday.harsh3">
    <TextView
        android:text="What game can you play all day long(And always lose to Bhai)?"
        android:layout_width="wrap_content"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_red_dark"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:fontFamily="casual" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:onClick="harshvoice2"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp" />

    <Button
        android:text="Game Of Life"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button10"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Teen Patti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/abhi1"
        android:layout_above="@+id/button10"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp" />

    <Button
        android:text="Bukharo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/harsh3"
        android:textSize="14sp"
        android:layout_above="@+id/abhi1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp" />

</RelativeLayout>
