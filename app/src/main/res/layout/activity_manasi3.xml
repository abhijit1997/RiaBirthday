<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <Button
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:text="next"
            android:id="@+id/next"
            android:layout_marginTop="150dp"

            android:onClick="ashray111"
            android:layout_weight="0.26" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sleep"
            android:id="@+id/notpp"

            android:layout_below="@+id/manasi3"
            android:layout_alignStart="@+id/manasi3" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text= "Talk"
            android:id="@+id/aayu3"
            android:layout_below="@+id/notpp"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cry"
            android:id="@+id/kkr"
            android:layout_weight="1"
            android:layout_below="@+id/aayu3"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laugh"
            android:layout_marginTop="83dp"
            android:id="@+id/manasi3"

            android:layout_weight="1"
            android:layout_below="@+id/next"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/quiz_background"
            android:src="@drawable/quiz_background"
            android:scaleType = "centerCrop"
            android:id="@+id/imageView2"
            android:layout_alignBottom="@+id/relativeLayout"
            android:layout_alignStart="@+id/relativeLayout" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:textColor="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:text= "How do we remove our frustrations?"

            android:id="@+id/textView"
            android:layout_weight="0.42"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:textSize="20dp"
            android:fontFamily="casual" />


    </RelativeLayout>

</LinearLayout>
