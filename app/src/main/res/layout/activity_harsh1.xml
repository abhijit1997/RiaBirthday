<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_harsh1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.riabirthday.harsh1">
    <TextView
        android:text="How old do you think you really are?"
        android:layout_width="wrap_content"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_red_dark"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:fontFamily="casual" />

    <Button
        android:text="16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/harsh1"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/abhi1"
        android:layout_above="@+id/harsh1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />

    <Button
        android:text="17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:textSize="14sp"
        android:layout_above="@+id/abhi1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:onClick="harshvoice1"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="276dp" />

</RelativeLayout>
