<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mom6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.riabirthday.mom6">


    <TextView
        android:text="Why are you always stopped at airport security?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button3"
        android:layout_marginBottom="24dp"
        android:onClick="momvid" />

    <Button
        android:text="You look like a terrorist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mom2"
        android:layout_above="@+id/button5"
        android:layout_alignStart="@+id/button6"
        android:layout_marginBottom="61dp" />

    <Button
        android:text="You act suspicious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:text="They think you have a gun hidden in your hair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mom5"
        android:layout_marginRight="80dp"
        android:layout_above="@+id/button6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="13dp" />

    <Button
        android:text="All of the above"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_above="@+id/mom5"
        android:layout_alignStart="@+id/mom5"
        android:layout_marginStart="12dp" />


</RelativeLayout>
